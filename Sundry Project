    <script>
        function processForm(event) {
            event.preventDefault(); // Prevent default form submission

            // Collect form data
            const form = event.target;
            const formData = new FormData(form);

            // Filter out empty fields
            const filteredData = {};
            formData.forEach((value, key) => {
                if (value && value.trim() !== "" && value > 0) {
                    filteredData[key] = value;
                }
            });

            // Format the email content
            const emailBody = `
                Foreman Name: ${filteredData.Foreman_Name || ''}
                Job Number: ${filteredData.Job_Number || ''}
                Date Requested: ${filteredData.Date_Requested || ''}
                Date Needed By: ${filteredData.Date_Needed_By || ''}
                
                Items Ordered:
                ${Object.keys(filteredData)
                    .filter(key => !['Foreman_Name', 'Job_Number', 'Date_Requested', 'Date_Needed_By', 'Additional_Supplies'].includes(key))
                    .map(key => `${key}: ${filteredData[key]}`)
                    .join('\n')}
                
                Additional Supplies:
                ${filteredData.Additional_Supplies || 'None'}
            `;

            // Send email via mailto
            const mailtoLink = `mailto:MuladoreErik@gmail.com?subject=Sundries Order&body=${encodeURIComponent(emailBody)}`;
            window.location.href = mailtoLink;
        }
    </script>
